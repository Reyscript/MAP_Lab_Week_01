<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LAB_WEEK_01" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.LAB_WEEK_01" parent="Base.Theme.LAB_WEEK_01" />

    <!-- Professional styles -->
    <style name="screen_margin">
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">@drawable/bg_gradient</item>
    </style>

    <style name="card_style">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">24dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="text_input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadius">12dp</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/purple_500</item>
    </style>

    <style name="text_display">
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:background">@drawable/bg_display</item>
        <item name="android:padding">16dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="button_style" parent="Widget.Material3.Button">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="subtitle_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
</resources>