<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/subtitle_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_subtitle"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:gravity="center"
                android:lineSpacingExtra="2sp" />
        </LinearLayout>

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Display Area -->
                <TextView
                    android:id="@+id/display_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_instructions"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_display" />

                <!-- Name Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_hint"
                        android:textColor="@color/gray_700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadius="8dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="1.5dp"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="textCapWords"
                            android:imeOptions="actionNext"
                            android:textColor="@color/gray_800"
                            android:textSize="15sp"
                            android:paddingHorizontal="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Student Number Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_number_hint"
                        android:textColor="@color/gray_700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/student_number_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadius="8dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="1.5dp"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/student_number_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="number"
                            android:maxLength="11"
                            android:imeOptions="actionDone"
                            android:textColor="@color/gray_800"
                            android:textSize="15sp"
                            android:paddingHorizontal="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required_field"
                        android:textColor="@color/gray_500"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/submit_button_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="8dp"
                    android:textColor="@color/white"
                    app:elevation="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Student Portal by Reyscript"
            android:textColor="@color/gray_400"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp" />

    </LinearLayout>
</ScrollView>