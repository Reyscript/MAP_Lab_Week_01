<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LAB_WEEK_01" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Keep the same style names but adjust colors for night mode -->
    <style name="text_input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadius">12dp</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textColorHint">@color/purple_200</item>
    </style>

    <style name="button_style" parent="Widget.Material3.Button">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>